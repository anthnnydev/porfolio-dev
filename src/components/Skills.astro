---
const SKILLS = [
  { title: "React" },
  { title: "TypeScript" },
  { title: "HTML" },
  { title: "CSS" },
  { title: "JavaScript" },
  { title: "Astro" },
  { title: "Python" },
  { title: "Django" },
];
---

<section class="dark:text-white">
  <div class="container mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {SKILLS.map((skill) => (
        <div
          class="dark:bg-gray-800/40 text-center py-4 rounded-lg shadow-lg"
        >
          {skill.title}
        </div>
      ))}
    </div>
  </div>
</section>
